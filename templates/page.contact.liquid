{% include 'page-header', title:'Contact' %}

  <section class="contact section">
    <div class="container">
      <div class="row">
        <div class="contact-form col-md-6 ">
          {% form 'contact' %}

            {% if form.posted_successfully? %}
              <p class="note form-success" style="color:green;"> Thank you for reaching out! We'll respond shortly!
                <iframe src="https://giphy.com/embed/11ISwbgCxEzMyY" width="480" height="360" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/reaction-mrw-11ISwbgCxEzMyY">via GIPHY</a></p>
             </p>
            {% endif %}

            <div class="form-group">
              <input type="text" placeholder="Your Name" class="form-control" name="contact[name]" id="name">
            </div>

            <div class="form-group">
              <input type="email" placeholder="Your Email" class="form-control" name="contact[email]" id="email">
            </div>

            <div class="form-group">
              <input type="text" placeholder="Subject" class="form-control" name="contact[subject]" id="subject">
            </div>

            <div class="form-group">
              <textarea rows="6" placeholder="Message" class="form-control" name="contact[message]" id="message"></textarea>
            </div>

            <div>
              <input type="submit" id="contact-submit" class="btn btn-transparent" value="Submit">
            </div>
          {% endform %}
        </div>

        <div class="contact-details col-md-6 ">
          <ul class="contact-short-info list-unstyled">
      {% if settings.address != blank %}
            <li>
              <i class="fa fa-home"></i>
              <span>{{ settings.address }}</span>
            </li>
      {% endif %}
      {% if settings.phone != blank %}
            <li>
              <i class="fa fa-mobile"></i>
              <span>Phone: {{ settings.phone }}</span>
            </li>
      {% endif %}
      {% if settings.fax != blank %}
            <li>
              <i class="fa fa-fax"></i>
              <span>Fax: {{ settings.fax }}</span>
            </li>
      {% endif %}
      {% if settings.email != blank %}
            <li>
              <i class="fas fa-envelope"></i>
              <span>Email: {{ settings.email }}</span>
            </li>
      {% endif %}
          </ul>
          <div class="social-icon">
            <ul>
              <li><a class="fb-icon" href="#"><i class="fab fa-facebook"></i></a></li>
              <li><a href="#"><i class="fab fa-twitter"></i></a></li>
              <li><a href="#"><i class="fab fa-dribbble"></i></a></li>
              <li><a href="#"><i class="fab fa-google-plus"></i></a></li>
              <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
